<div class="flex  h-full items-center justify-center py-12 px-6 md:px-4 lg:px-8 mt-44">
  {% comment %} for   Reset  form {% endcomment %}
  <div class="max-w-md w-full space-y-8">
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Reset Your Password</h1>
    </div>
    <div class="mt-8">
      {% form 'reset_customer_password' %}

        {% if form.errors %}
          <div class="relative border border-red-400 bg-red 100 text-red-700 px-4 py-3" role="alert">
            <strong class="font-bold">Error!</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}


        {% comment %} Creating password {% endcomment %}

        <div class="my-2">
          <label for="password" class="sr-only">password</label>
          <input
            type="password"
            name="customer[password]"
            id="password"
            autocomplete="new-password"
            class="relative block w-full px-3 py-2 border"
            placeholder="password">
        </div>

        <div class="my-2">
          <label for="password_confirmation" class="sr-only">Password Confirmation</label>
          <input
            type="password"
            name="customer[password_confirmation]"
            id="password_confirmation"
            autocomplete="new-password"
            class="relative block w-full px-3 py-2 border"
            placeholder="Confirm your Password">
        </div>
        <div class="btn_login">
          <button type="submit" class="font-sm w-full px-4 py-2 font-medium text-white bg-gray-600 hover:bg-gray-900">Password Reset</button>
        </div>
      {% endform %}
    </div>
  </div>
</div>