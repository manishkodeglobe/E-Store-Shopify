<style>
  .swiper_banner {
    margin-left: auto;
    margin-right: auto;
    overflow: hidden;
    list-style: none;
    padding: 0;
    z-index: 1;
    display: block;

  }


  .next_prev {
    display: flex;
    flex-direction: row-reverse;
  }
</style>



<div class="container-fluid HomePage_banner">



  <div class="swiper_banner">

    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
      <!-- Slides -->

      <div class="swiper-slide">
        <div class="card ">
          <img
            class="w-full  object-cover"
            src="{{ 'banner-1.webp' | asset_url }}"
            width="full"
            height="auto"
            loading="lazy">
        </div>
      </div>
      <div class="swiper-slide">
        <div class="card shadow-lg overflow-hidden w-full ">
          <img
            class="w-full  object-cover"
            src="{{ 'banner-2.jpg' | asset_url }}"
            width="full"
            height="auto"
            loading="lazy">
        </div>
      </div>
      <div class="swiper-slide">
        <div class="card shadow-lg overflow-hidden w-full ">
          <img
            class="w-full  object-cover"
            src="{{ 'banner-3.jpg' | asset_url }}"
            width="full"
            height="auto"
            loading="lazy">
        </div>
      </div>



    </div>



  </div>
</div>

<div class="next_prev mb-12 justify-center py-6">
  <span class="swiper-button-prev_product">{% render 'left-arrow-slider' %}
  </span>
  <span class="swiper-button-next_product mx-8">{% render 'right-arrow-slider' %}
  </span>
</div>