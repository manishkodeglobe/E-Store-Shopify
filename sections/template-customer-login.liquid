<div class="flex  h-full items-center justify-center py-12 px-6 md:px-4 lg:px-8 mt-44" x-data="{ loginForm: true, pwRecoverForm: false }">
  {% comment %} for login form {% endcomment %}
  <div x-show="loginForm" class="max-w-md w-full space-y-8">
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Sign in to your account</h1>
    </div>
    <div class="mt-8">
      {% form 'customer_login' %}

        {% if form.errors %}
          <div class="relative border border-red-400 bg-red 100 text-red-700 px-4 py-3" role="alert">
            <strong class="font-bold">Error!</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}

        <div class="my-2">
          <label for="email_address" class="sr-only">Email address</label>
          <input
            type="email"
            name="customer[email]"
            id="email_address"
            autocomplete="email"
            class="relative block w-full px-3 py-2 border"
            placeholder="Email address">

        </div>
        {% comment %} Creating password {% endcomment %}
        {% if form.password_needed %}
          <div class="my-2">
            <label for="password" class="sr-only">password</label>
            <input
              type="password"
              name="customer[password]"
              id="password"
              autocomplete="current-password"
              class="relative block w-full px-3 py-2 border"
              placeholder="password">
          </div>

        {% endif %}
        <div class="Recover_password_link my-8 text-sm">
          <a
            href="#"
            x-on:click="loginForm = false; pwRecoverForm = true"
            class="underline text-gray-500 hover:text-gray-900">
            Forgot your password
          </a>
        </div>
        <div class="btn_login">
          <button type="submit" class="font-sm w-full px-4 py-2 font-medium text-white bg-gray-600 hover:bg-gray-900">Sign in</button>
        </div>

      {% endform %}

    </div>
    {% comment %} Guest Login {% endcomment %}
    {% if shop.checkout.guest_login %}

      <hr class="my-12">
      <div>
        <h1 class="mt-6 text-center text-3xl font-bold">Continue as a guest</h1>
      </div>

      {% form 'guest_login' %}

        <div>
          <button type="submit" class="font-sm w-full px-4 py-2 font-medium text-white bg-gray-600 hover:bg-gray-900">Continue</button>
        </div>
      {% endform %}



    {% endif %}
    {% comment %} End Guest Login {% endcomment %}
  </div>
  {% comment %} for password recover form {% endcomment %}
  <div x-show="pwRecoverForm" class="max-w-md w-full space-y-8">
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Recover your password</h1>
    </div>
    <div class="mt-8">
      {% form 'recover_customer_password' %}

        {% if form.errors %}
          <div class="relative border border-red-400 bg-red 100 text-red-700 px-4 py-3" role="alert">
            <strong class="font-bold">Error!</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}

        <div class="my-2">
          <label for="email" class="sr-only">Email address</label>
          <input
            type="email"
            name="email"
            id="email"
            autocomplete="email"
            class="relative block w-full px-3 py-2 border"
            placeholder="Email">

        </div>

        <div class="btn_login">
          <button type="submit" class="font-sm w-full px-4 py-2 font-medium text-white bg-gray-600 hover:bg-gray-900">Recover password</button>
        </div>
        <div class="mt-8 text-sm">
          <a
            x-on:click="loginForm = true; pwRecoverForm = false"
            href="#"
            class="underline text-gray-500 hover:text-gray-900">Back to login</a>
        </div>
      {% endform %}
    </div>
  </div>
</div>