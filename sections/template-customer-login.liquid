<div class="flex  h-full items-center justify-center py-12 px-6 md:px-4 lg:px-8">
  {% comment %} for login form {% endcomment %}
  <div class="max-w-md w-full space-y-8">
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Sign in to your account</h1>
    </div>
    <div class="mt-8">
      {% form 'customer_login' %}

        <div class="my-2">
          <label for="email_address" class="sr-only">Email address</label>
          <input
            type="email"
            name="customer[email]"
            id="email_address"
            autocomplete="email"
            class="relative block w-full px-3 py-2 border"
            placeholder="Email address">

        </div>

      {% endform %}

    </div>
  </div>
  {% comment %} for password recover form {% endcomment %}
  <div class="max-w-md w-full space-y-8"></div>
</div>