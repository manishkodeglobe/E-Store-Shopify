      {% comment %} Mobile Menu {% endcomment %}
        <div x-show="mobileMenuOpen" class="absolute z-10 top-0 inset-x-0 p-2 transform origin-top-left md:hidden"> <div class="shadow-lg rounded-lg ring-1 ring-black ring-opacity-5 bg-white w-full">
          <div class="p-5 divide-y-2 divide-gray-50">
            <!-- MOBILE MENU HEADER TITLE PLUS CLOSE BUTTON -->
            <div class="flex items-center justify-between pb-3">
              <div>
                <a href="{{ shop.url }}">{% render 'site-icon' %}</a>
              </div>
              <div class="-mr-2">
                <button
                  x-on:click="mobileMenuOpen =  false"
                  type="button"
                  class="bg-white rounded-md p-2 text-gray-500">
                  {% render 'menu-close' %}
                </button>
              </div>
            </div>
            <!-- NAVIGATION LINKS FOR MOBILE MENU -->
            <div class="pt-3">
              <nav class="grid gap-y-7" x-data="{ open: false }">
                {% for link in linklists['main-menu'].links %}
                  {% assign handle_link = link.handle | replace: '-', '_' %}
                  {% if link.links != blank %}
                    <div x-data="{ {{ handle_link }}: false}" class="relative">
                      <button
                        x-on:click="{{ handle_link }} = ! {{ handle_link }}"
                        type="button"
                        class="text-base text-gray-500 hover:text-gray-900 flex items-center justify-between w-full">
                        <div class=" ">
                          {{ link.title }}
                        </div>
                        {% render 'dropdown-icon' %}
                      </button>
                      <div
                        class="grid gap-y-7 py-3"
                        x-show="{{ handle_link }}"
                        @click.away="{{ handle_link }} = false">
                        {% for childlink in link.links %}
                          <a href="{{ childlink.url }}" class="-m-3 p-3 mt-2 flex items-center rounded-md text-gray-500 hover:text-gray-900 hover:bg-gray-50">
                            <span class="ml-3 text-base font-medium text-gray-500">{{ childlink.title }}</span>
                          </a>
                        {% endfor %}
                      </div>
                    </div>
                  {% else %}
                    <a href="" class="-m-3 p-3 flex items-center rounded-md text-gray-500 hover:text-gray-900 hover:bg-gray-50">
                      {{ link.title }}
                    </a>
                  {% endif %}
                {% endfor %}
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>