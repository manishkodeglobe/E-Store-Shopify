<div class="flex  h-full items-center justify-center py-12 px-6 md:px-4 lg:px-8 mt-44">
  {% comment %} for  Registration form {% endcomment %}
  <div class="max-w-md w-full space-y-8">
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Register an account</h1>
    </div>
    <div class="mt-8">
      {% form 'create_customer' %}

        {% if form.errors %}
          <div class="relative border border-red-400 bg-red 100 text-red-700 px-4 py-3" role="alert">
            <strong class="font-bold">Error!</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}

        <div class="my-2">
          <label for="first_name" class="sr-only">first name</label>
          <input
            type="text"
            name="customer[first_name]"
            id="Full_name"
            autocomplete="given-name"
            class="relative block w-full px-3 py-2 border"
            placeholder="first name">
        </div>
        <div class="my-2">
          <label for="last_name" class="sr-only">Last Name</label>
          <input
            type="text"
            name="customer[last_name]"
            id="last_name"
            autocomplete="faimly-name"
            class="relative block w-full px-3 py-2 border"
            placeholder="last name">
        </div>
        <div class="my-2">
          <label for="Birthday" class="sr-only">Birthday</label>
          <input
            type="date"
            name="customer[note][Birthday]"
            id="Birthday"

            class="relative block w-full px-3 py-2 border"
            placeholder="Email address">
        </div>
        <div class="my-2">
          <label for="email_address" class="sr-only">Email address</label>
          <input
            type="email"
            name="customer[email]"
            id="email_address"
            autocomplete="email"
            class="relative block w-full px-3 py-2 border"
            placeholder="Email address">
        </div>
        {% comment %} Creating password {% endcomment %}

        <div class="my-2">
          <label for="password" class="sr-only">password</label>
          <input
            type="password"
            name="customer[password]"
            id="password"
            autocomplete="new-password"
            class="relative block w-full px-3 py-2 border"
            placeholder="password">
        </div>



        <div class="btn_login">
          <button type="submit" class="font-sm w-full px-4 py-2 font-medium text-white bg-gray-600 hover:bg-gray-900">Create Account</button>
        </div>

      {% endform %}

    </div>
  </div>


</div>