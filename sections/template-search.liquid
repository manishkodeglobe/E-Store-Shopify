<h1 class="text-5xl text-center py-40 mb-8  bg-gray-700   text-white">Search Results</h1>
<div class="container mx-auto">
  {% paginate search.results by 10 %}

    <div class="flex justify-center items-center my-10">
      <form
        action="{{ routes.search_url }}"
        method="get"
        class="border flex rounded">
        <input
          type="search"
          name="q"
          placeholder="Search"
          value="{{ search.terms | escape }}"
          class="px-4 py-2 w-80 border-none">

        <button type="submit" class="bg-gray-900 hover:bg-gray-700 text-white border px-4">Search</button>
      </form>
    </div>
    {% if search.performed %}
      {% if search.results.size > 0 %}
        <div class="max-w-6xl mx-auto">
          <p class="text-gray-500 text-center my-10">{{ search.results.size }} results for the search term {{ search.terms | escape }}</p>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            {% for item in search.results %}
              {% case item.object_type %}
                {% when 'product' %}
                {% render 'product-card', product_product: item %}
            {% else %}

              {% endcase %}
            {% endfor %}
          </div>
        </div>

      {% else %}
        <div class="text-center my-4">
          <p>No results found for the search term: {{ search.terms | escape }}. Try to use a different keyword</p>
        </div>
      {% endif %}
    {% endif %}


    {% render 'pagination', paginate: paginate %}
  {% endpaginate %}
</div>



