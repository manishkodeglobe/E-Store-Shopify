<div class="w-full py-6 px-3">
  <div class="border bg-white shadow-lg rounded-lg overflow-hidden" >

    <a href="{{ product_product.url }}">
      {% if product_product.featured_image %}
        <div class="h-100 overflow-hidden">
          <img
            src="{{ product_product.featured_image | image_url }}"
            class="h-full w-full object-cover    transition duration-1000 ease-in-out hover:scale-105 transform product_image_width"
            height="full"
            width="full"
            loading="lazy">
        </div>
      {% else %}
        {% assign placeholder_images = 'product-1' %}
        {{ placeholder_images | placeholder_svg_tag: 'h-full w-full object-cover' }}
      {% endif %}
    </a>

    <div class="flex p-5 justify-between">
      <div class="product_name"8
        <span class="text-sm text-gray-400">{{ product_product.vendor }}</span>
        <a href="{{ product_product.url }}">
          <h1 class="text-gray-700 uppercase font-medium">{{ product_product.title | truncatewords: 5 }}</h1>
        </a>

      </div>
      <div class="Product_price">

        <p class="text-gray-500">{{ product_product.price | money }}</p>

      </div>
    </div>

  </div>

</div>